<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="sx.android.ui.views.AsyncImageView"
        android:id="@+id/pictureImageView"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/vertical_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <sx.android.ui.views.CircleButton
                android:id="@+id/cancelButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                app:cb_color="@color/app_cancel"
                app:cb_pressedRingWidth="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_circle_cancel"
                android:padding="16dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <sx.android.ui.views.CircleButton
                android:id="@+id/okButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                app:cb_color="@color/app_ok"
                app:cb_pressedRingWidth="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_circle_ok"
                android:padding="16dp" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
