<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    >

    <FrameLayout
        style="@style/AppTheme.Layout.List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uxSender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Philipp Prangenberg"
                    android:layout_marginBottom="@dimen/margin"
                    style="@style/TextAppearance.AppCompat.Medium"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/uxZipFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="36251"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/uxCityFrom"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:text="Bad Hersfeld"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uxRecipient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Philipp Prangenberg"
                    android:layout_marginBottom="@dimen/margin"
                    style="@style/TextAppearance.AppCompat.Medium"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/uxZipTo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="36251"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/uxCityTo"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:text="Bad Hersfeld"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
