<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uxCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/uxAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <!-- Collapsing toolbar layout. The scroll flags are updated during runtime -->
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/uxCollapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleGravity="center"
            app:expandedTitleTextAppearance="@style/AppTheme.AppBarOverlay.TextAppearance.Title"
            app:layout_scrollFlags="scroll|enterAlways"
            >

            <!-- Collapsible header area -->
            <FrameLayout
                android:id="@+id/uxHeader"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorWhiteSmoke"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_collapseMode="parallax"
                >

                <!-- Header image -->
                <ImageView
                    android:id="@+id/uxHeaderImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_street_1"
                    android:contentDescription="TODO"/>

                <!-- Header overlay -->
                <FrameLayout
                    android:id="@+id/uxHeaderOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent">

                </FrameLayout>

            </FrameLayout>

            <!-- Header bottom accent bar -->
            <FrameLayout
                android:id="@+id/uxHeaderAccentBar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:alpha="0.5"
                android:background="@color/colorAccent"
                app:layout_collapseMode="pin"
                />

            <!-- Toolbar -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/uxToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >

                <LinearLayout
                    android:id="@+id/uxStatusBar"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="@dimen/small_margin"
                    >

                    <ImageView
                        android:id="@+id/uxDevIcon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dev"
                        android:tint="@color/colorDev"
                        android:layout_marginEnd="@dimen/margin"
                        />

                    <ProgressBar
                        android:id="@+id/uxProgressBar"
                        android:layout_width="@dimen/progress_size_medium"
                        android:layout_height="@dimen/progress_size_medium"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/medium_margin"
                        />

                    <include
                        android:id="@+id/uxUpdateIndicator"
                        layout="@layout/view_update_indicator"
                        />

                    <include
                        android:id="@+id/uxMqIndicator"
                        layout="@layout/view_mq_indicator"
                        />

                    <include
                        android:id="@+id/uxConnectivityIndicator"
                        layout="@layout/view_connectivity_indicator"
                        />

                </LinearLayout>


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <!-- Main content fragment container -->
    <FrameLayout
        android:id="@+id/uxContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    <!-- Camera/scanner fragment container -->
    <FrameLayout
        android:id="@+id/uxScannerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:layout_behavior="sx.android.view.behavior.MoveWithSnackbarBehavior"/>

    <!-- Action overlay view -->
    <org.deku.leoz.mobile.ui.view.ActionOverlayView
        android:id="@+id/uxActionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="sx.android.view.behavior.MoveWithSnackbarBehavior"/>

</android.support.design.widget.CoordinatorLayout>
