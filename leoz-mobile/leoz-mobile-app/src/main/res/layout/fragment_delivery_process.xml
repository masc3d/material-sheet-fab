<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="org.deku.leoz.mobile.ui.fragment.IdentityCheckFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/uxLabelNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="0"
                android:background="@drawable/rounded_corner_background_white"
                android:editable="true"
                android:ems="10"
                android:enabled="true"
                android:hint="Parcel-No."
                android:inputType="textCapCharacters|textNoSuggestions"
                android:padding="5dp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/uxStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/uxZip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Lärchenweg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uxZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/uxCity"
                android:layout_alignBottom="@+id/uxCity"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="36251"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uxCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/uxAppointment"
                android:layout_alignBottom="@+id/uxAppointment"
                android:layout_alignEnd="@+id/uxReceipient"
                android:layout_alignRight="@+id/uxReceipient"
                android:text="Bad Hersfeld"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uxReceipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Philipp Prangenberg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uxOrderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="0/1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uxOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/uxOrderCount"
                android:layout_toStartOf="@+id/uxOrderCount"
                android:text="Aufträge:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uxParcelCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/uxOrderCount"
                android:text="0/2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uxParcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/uxOrder"
                android:layout_alignStart="@+id/uxOrder"
                android:layout_below="@+id/uxOrder"
                android:layout_toLeftOf="@+id/uxParcelCount"
                android:layout_toStartOf="@+id/uxParcelCount"
                android:text="Pakete:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uxAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/uxParcelCount"
                android:gravity="bottom|right"
                android:text="08.00 - 12.00"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/uxDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uxCity"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/uxStreetNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/uxCity"
                android:layout_alignEnd="@+id/uxCity"
                android:layout_alignRight="@+id/uxCity"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/uxStreet"
                android:layout_toRightOf="@+id/uxStreet"
                android:text="4"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/uxParcelList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="visible"
                app:srcCompat="@drawable/green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="visible"
                app:srcCompat="@drawable/red" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>