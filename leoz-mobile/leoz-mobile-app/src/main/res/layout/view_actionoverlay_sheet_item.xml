<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/vertical_large_margin"
              android:paddingTop="@dimen/vertical_large_margin"
              android:background="?attr/selectableItemBackground"
              android:clickable="true"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/uxActionOverlaySheetItemIcon"
        style="@style/AppTheme.ActionOverlay.ImageView"
        android:layout_marginStart="@dimen/horizontal_large_margin"
        android:layout_marginEnd="@dimen/horizontal_xlarge_margin"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_bug"/>

    <TextView
        android:id="@+id/uxActionOverlaySheetItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_xlarge_margin"
        android:textAppearance="@style/AppTheme.ActionOverlay.TextAppearance"
        android:text="Action"
        android:layout_gravity="center_vertical" />

</LinearLayout>