<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:foreground="?attr/selectableItemBackground"
    >

    <!-- Left area -->
    <FrameLayout
        style="@style/AppTheme.Layout.List"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Address layout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/uxReceipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Philipp Prangenberg"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />

            <TextView
                android:id="@+id/uxStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uxReceipient"
                android:text="LÃ¤rchenweg"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/uxStreetNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/uxStreet"
                android:layout_marginStart="@dimen/margin"
                android:layout_toEndOf="@+id/uxStreet"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/uxZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="36251"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/uxCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/uxZip"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_toEndOf="@id/uxZip"
                android:text="Bad Hersfeld"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        </RelativeLayout>

    </FrameLayout>

    <!-- Right area -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/colorWhiteSmoke"
        >

        <FrameLayout
            style="@style/AppTheme.Layout.List"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Appointment layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                >

                <sx.android.view.ClockView
                    android:id="@+id/uxAppointmentClock"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uxAppointmentFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08.00"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <TextView
                        android:id="@+id/uxAppointmentTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08.00"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                </LinearLayout>
            </LinearLayout>


            <!-- Counters -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:divider="@drawable/divider_vertical_small"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin"
                        android:src="@drawable/ic_file_document"/>

                    <TextView
                        android:id="@+id/uxOrderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin"
                        android:src="@drawable/ic_package_closed"/>

                    <TextView
                        android:id="@+id/uxParcelCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <!-- Status icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_information_outline"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/ic_clock_alert"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_alert_outline"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
