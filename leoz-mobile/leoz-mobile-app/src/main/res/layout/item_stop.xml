<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable name="stop" type="org.deku.leoz.mobile.ui.vm.StopViewModel"/>
        <variable name="color" type="Integer"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/AppTheme.CardView"
        android:id="@+id/uxStopItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        >

        <!-- Left area -->
        <FrameLayout
            style="@style/AppTheme.Layout.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Address layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/uxRecipient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{stop.address.line1, default = `Recipient`}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    />

                <TextView
                    android:id="@+id/uxAddressLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{stop.address.line2, default = `Address Line 2`}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_marginBottom="@dimen/medium_margin"
                    />

                <TextView
                    android:id="@+id/uxStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{stop.address.street, default = `Street`}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />

                <TextView
                    android:id="@+id/uxCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="@{stop.address.city, default = `City`}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />


                <org.deku.leoz.mobile.ui.view.ServicesView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:imageMargin="@dimen/small_margin"
                    app:imageSize="24dp"
                    app:services="@{stop.services}"
                    >

                </org.deku.leoz.mobile.ui.view.ServicesView>
            </LinearLayout>

        </FrameLayout>

        <!-- Right area -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/colorWhiteSmoke"
            >

            <FrameLayout
                style="@style/AppTheme.Layout.List"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- Appointment layout -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    >

                    <sx.android.view.ClockView
                        android:id="@+id/uxAppointmentClock"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin"
                        app:color="@color/colorGrey"
                        app:hour="@{stop.appointmentHour}"
                        app:minute="@{stop.appointmentMinute}"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/uxAppointmentFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{stop.appointmentFrom, default = `08:00`}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                        <TextView
                            android:id="@+id/uxAppointmentTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{stop.appointmentTo, default = `08:00`}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    </LinearLayout>
                </LinearLayout>


                <!-- Counters -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:divider="@drawable/divider_vertical_small"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin"
                            android:tint="@color/colorGrey"
                            android:src="@drawable/ic_order"/>

                        <TextView
                            android:id="@+id/uxOrderCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@{stop.orderAmount, default = `1`}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin"
                            android:tint="@color/colorGrey"
                            android:src="@drawable/ic_package_variant_closed"/>

                        <TextView
                            android:id="@+id/uxParcelCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@{stop.parcelAmount, default = `1`}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

