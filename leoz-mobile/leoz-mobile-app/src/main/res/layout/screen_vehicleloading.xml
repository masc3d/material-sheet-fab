<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="stats"
            type="org.deku.leoz.mobile.ui.screen.VehicleLoadingScreen.StatsViewModel"/>
    </data>

    <LinearLayout
        style="@style/AppTheme.Layout.List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/view_vehicleloading_header"
            bind:stats="@{stats}"
            />

        <!-- FlexibleAdapter/RecyclerView wrapper layout for sticky headers -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/uxParcelList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:longClickable="false"
                android:scrollbars="none"/>

        </FrameLayout>

    </LinearLayout>
</layout>
