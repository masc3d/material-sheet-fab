<resources>
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button.Colored</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- Application theme for API Levels below 21 (no native material design support) -->
    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Startup theme, tailored for immediate display of img_splash screen (before activity is even loaded)
    by overriding window background -->
    <style name="StartupTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Widfet styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Layout styles -->
    <style name="AppTheme.Layout" />
    <!-- Use this style for all content areas which require default margins -->
    <style name="AppTheme.Layout.Content">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Common floating action button style -->
    <style name="AppTheme.Fab" parent="">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="useCompatPadding">true</item>
        <item name="elevation">@dimen/fab_elevate</item>
    </style>

    <!-- Colored button style -->
    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Borderless colored button style -->
    <style name="AppTheme.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>
</resources>
